{
  "name": "backend-entrypoint",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm --minify",
    "build:dev": "pnpm lint && pnpm clean && tsup src/index.ts --dts --format esm",
    "clean": "rm -rf dist",
    "check": "npx @biomejs/biome check --write ./src",
    "start": "node ./dist/index.js",
    "start:dev": "pnpm -F backend-* build && NODE_ENV=development nodemon ./dist/index.js",
    "start:test": "pnpm -F backend-* build && NODE_ENV=test node ./dist/index.js"
  },
  "keywords": [],
  "author": "MVP Chops <mvpchops@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "backend-core": "workspace:^",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "backend-searchcards": "workspace:^",
    "backend-users": "workspace:^"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.5",
    "@types/node": "^20.11.30",
    "nodemon": "^3.1.0"
  }
}
